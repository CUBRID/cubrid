<ivysettings>
    <properties file="build.properties" />
    <settings defaultResolver="local-chain"/>
    <resolvers>
        <!-- from ${CUBRID}/jdbc -->
        <filesystem name="local" checkmodified="true">
            <artifact pattern="${ivy.settings.dir}/lib/[artifact]-[revision].[ext]"/>
        </filesystem>

        <!-- from CUBRID artifactory -->
        <ibiblio name="cubrid_artifactory" m2compatible="true" root="http://maven.cubrid.org/"/>

        <chain name="local-chain">
            <resolver ref="local"/>
            <resolver ref="cubrid_artifactory"/>
        </chain>
    </resolvers>
</ivysettings>